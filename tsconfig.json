    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "build",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES2024",
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
