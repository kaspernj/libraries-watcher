{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "build",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "ES2024",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": ["bin/**/*", "src/**/*"]
}
