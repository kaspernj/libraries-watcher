{
  "bin": {
    "libraries-watcher": "bin/libraries-watcher.js"
  },
  "name": "libraries-watcher",
  "type": "module",
  "version": "1.0.2",
  "description": "Watch libraries and sync changes into multiple other paths as an alternative to package-linking.",
  "main": "build/libraries-watcher.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**"
  ],
  "scripts": {
    "build": "rm -rf build && npm run compile",
    "compile": "tsc && chmod +x build/bin/velocious.js",
    "start": "node bin/libraries-watcher.js",
    "test": "jasmine",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaspernj/libraries-watcher.git"
  },
  "keywords": [
    "libraries",
    "watcher",
    "package",
    "link"
  ],
  "author": "kasper@diestoeckels.de",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kaspernj/libraries-watcher/issues"
  },
  "homepage": "https://github.com/kaspernj/libraries-watcher#readme",
  "dependencies": {
    "awaitery": "^1.0.6",
    "chokidar": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "jasmine": "^5.6.0",
    "typescript": "^5.9.3"
  }
}
