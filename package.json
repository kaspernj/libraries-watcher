{
  "bin": {
    "libraries-watcher": "build/bin/libraries-watcher.js"
  },
  "name": "libraries-watcher",
  "type": "module",
  "version": "1.0.2",
  "description": "Watch libraries and sync changes into multiple other paths as an alternative to package-linking.",
  "main": "build/src/libraries-watcher.js",
  "types": "build/src/libraries-watcher.d.ts",
  "files": [
    "build/**"
  ],
  "scripts": {
    "build": "rm -rf build && npm run compile",
    "compile": "tsc -p tsconfig.build.json && chmod +x build/bin/libraries-watcher.js",
    "start": "node bin/libraries-watcher.js",
    "test": "jasmine",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -w -p tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaspernj/libraries-watcher.git"
  },
  "keywords": [
    "libraries",
    "watcher",
    "package",
    "link"
  ],
  "author": "kasper@diestoeckels.de",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kaspernj/libraries-watcher/issues"
  },
  "homepage": "https://github.com/kaspernj/libraries-watcher#readme",
  "dependencies": {
    "awaitery": "^1.0.11",
    "chokidar": "^5.0.0"
  },
  "devDependencies": {
    "@types/jasmine": "^6.0.0",
    "@types/node": "^25.0.3",
    "jasmine": "^6.0.0",
    "typescript": "^5.9.3"
  }
}
